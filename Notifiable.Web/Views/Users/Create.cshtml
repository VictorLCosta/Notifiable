@model UserViewModel
@{
    ViewData["Title"] = "Cadastrar usu√°rio";
}

<div class="container">
    <form method="post" data-ajax="true" asp-action="Create" asp-controller="Users" asp-anti-forgery
        data-ajax-complete="success" data-ajax-method="post">
        <div class="form-group">
            <label asp-for="Name">Nome</label>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Data de Nascimento</label>
            <input type="date" asp-for="BirthDate" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="ProvidedPassword">Senha</label>
            <input type="password" asp-for="ProvidedPassword" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Criar</button>
    </form>
</div>